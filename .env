# SMS Notifications (Twilio)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ============================================================================
# MONITORING & LOGGING CONFIGURATION
# ============================================================================
# Metrics
ENABLE_METRICS=true
METRICS_PORT=2112

# Logging
LOG_LEVEL=info
# Options: debug, info, warn, error

LOG_FORMAT=json
# Options: json, text

LOG_FILE=
# Leave empty to log to stdout

ENABLE_REQUEST_LOG=true
ENABLE_ERROR_LOG=true

# Error Tracking (Sentry)
SENTRY_DSN=

# Profiling
ENABLE_PROFILING=false
PROFILING_PORT=6060

# Health Check
HEALTH_CHECK_PATH=/health
METRICS_PATH=/metrics

# Distributed Tracing (Jaeger)
ENABLE_TRACING=false
JAEGER_ENDPOINT=
TRACING_SAMPLE_RATE=0.1

# ============================================================================
# DEVELOPMENT SETTINGS (Only for development environment)
# ============================================================================
# These will be ignored in production

# Enable debug routes in development
DEBUG_ROUTES=true

# Database seeding
SEED_DATABASE=false

# Mock services for testing
MOCK_EMAIL_SERVICE=false
MOCK_PUSH_SERVICE=false

# ============================================================================
# PRODUCTION SECURITY CHECKLIST
# ============================================================================
# Before deploying to production, make sure to:
# 1. Change all default secrets and passwords
